{% if screen_resolution == '1920x1080' %}
{%     set autofit = '1200' %}
{%     set font_size = '36' %}
{% else %}
{%     set autofit = '800' %}
{%     set font_size = '40' %}
{% endif %}

hwdec=no
profile=gpu-hq
vo=gpu

video-sync=display-resample
interpolation
dscale=mitchell
tscale=oversample
scale=ewa_lanczossharp
cscale=ewa_lanczossharp

ao=alsa

# Big cache.
cache=yes
demuxer-readahead-secs=10
demuxer-max-bytes=512MiB

# Control maximum size of mpv window
autofit={{ autofit }}

# Move subs a little up.
sub-pos=97

# OSD font settings. The half-transparent background under subs.
#sub-ass=no
sub-font="Alte Haas Grotesk"
sub-color='#EEEEEE'
sub-bold=yes
sub-font-size={{ font_size }}
sub-back-color="#80000000"
sub-border-size=0.0

# margin on sub-back-color.
sub-shadow-offset=5

alang=jpn
slang=eng

no-resume-playback

# Put mpv window in the center.
geometry=50%:50%

# Make youtube-dl prefer the <=720p
ytdl-format=best[height<=1080]

screenshot-format=png

sigmoid-upscaling=no
glsl-shaders=~/.mpv/shaders/adaptive-sharpen.glsl
